<% news = comment.commentable %>
<% if home_page %>
  <% link = "#{link_to_function news.title, "Iyxzone.Home.NoticeManager.read(#{notice.id}, '#{form_authenticity_token}'); window.open('/news/#{news.id}?reply_to=#{comment.poster_id}');"}" %>
<% else %>
  <% link = "#{link_to_function news.title, "window.open('/news/#{news.id}?reply_to=#{comment.poster_id}');" }" %>
<% end %>
<li>
  <div class='feed-message'>
    <% if home_page %>
      <%= link_to_function '', "Iyxzone.Home.NoticeManager.read(#{notice.id}, '#{form_authenticity_token}')", :class => 'icon-active' %>
    <% end %>
    <% if notice.data == 'reply' %>
      <%= profile_link comment.poster %> 在 <%= link %> 里回复了你
    <% end %>
  </div>
</li>
